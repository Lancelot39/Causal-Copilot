# =============================================================================
# Causal-Copilot Environment Variables Configuration
# =============================================================================
# Copy this file to .env and configure the variables according to your setup

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider: 'openai', 'ollama', or 'openrouter'
LLM_PROVIDER=ollama

# Model name (depends on your provider)
# For OpenAI: 'gpt-4', 'gpt-3.5-turbo', etc.
# For Ollama: 'llama3.2', 'llama2', 'mistral', etc.
# For OpenRouter: Various models available
LLM_MODEL=llama3.2

# API Keys (only needed for respective providers)
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama Base URL (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Data and Output Configuration
# =============================================================================

# Input data file path (optional - can be set via upload in web interface)
DATA_FILE=data/dataset/example/data.csv

# Output directories
OUTPUT_REPORT_DIR=output_report
OUTPUT_GRAPH_DIR=output_graph

# =============================================================================
# Analysis Configuration
# =============================================================================

# Simulation mode: 'online' or 'offline'
SIMULATION_MODE=offline

# Data mode: 'real' or 'simulated'
DATA_MODE=real

# Initial query for analysis (optional)
INITIAL_QUERY=Do causal discovery on this dataset

# Enable parallel computing for bootstrapping
PARALLEL=true

# Debug mode
DEBUG=false

# =============================================================================
# Algorithm Parameters
# =============================================================================

# Statistical significance level (0.0 to 1.0)
ALPHA=0.1

# Ratio parameter for various algorithms
RATIO=0.5

# Number of bootstrap tests
NUM_TEST=100
